<div class="min-vh-100 d-flex align-items-center bg-dark">
    <section class="w-100 row justify-content-center">
        <div class="col-10 col-md-6 col-lg-5">


            <h1 class="display-3 text-center text-white">Log In</h1>
            <form class="login-form bg-white my-4 p-4 rounded">

                <div class="form-group">
                    <label for="email-login">Email</label>
                    <input type="text" id="email-login" class="form-control" placeholder="Email" />
                </div>
                <div class="form-group">
                    <label for="password-login">Password</label>
                    <input type="text" id="password-login" class="form-control" placeholder="Password" />
                </div>
                
                <button id="login-btn" class="btn btn-block btn-success">Log In</button>
            </form>
        </div>
    </section>
</div>

{{!-- SIGNUP --}}
<div class="min-vh-100 d-flex align-items-center bg-dark">
    <section class="w-100 row justify-content-center">
        <div class="col-10 col-md-6 col-lg-5">

            <h1 class="display-3 text-center text-white">Sign Up!</h1>
            <form class=" signup-form bg-white my-4 p-4 rounded">
                <h3>Fill out the form and get started!</h3>

                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name-signup" class="form-control" placeholder="Name" />
                </div>
                <div class="form-group">
                    <label for="email-signin">Email</label>
                    <input type="text" id="email-signup" class="form-control" placeholder="Email" />
                </div>
                <div class="form-group">
                    <label for="password-signin">Password</label>
                    <input type="text" id="password-signin" class="form-control" placeholder="Password" />
                </div>

                <button id="singup-btn" class="btn btn-block btn-success">Complete Signup!</button>

            </form>
        </div>
    </section>

</div>

