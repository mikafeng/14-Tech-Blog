
{{#each posts as |post| }}
<div class="border border-info row mb-4 project">
    <div class="col-md-5">
        <h2 class="p-md-5">
        <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
    </div>
    <div class="col-md-7 p-md-3">
        <p>{{post.post_text}}</p>
        <p>
            Created by {{post.user.username}} on {{format_date post.date_created}}
        </p>
        <p>{{comment_text}}</p>
    </div>
</div>
{{/each}}